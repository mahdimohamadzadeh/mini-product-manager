{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": [
    ".nuxt/nuxt.d.ts",
    ".nuxt/imports.d.ts",
    "vue-env.d.ts",
    "types/**/*",
    "nuxt.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "**/*.ts",
    "**/*.vue"
  ]
}
